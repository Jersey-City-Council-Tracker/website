<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Topics</h1>

  <% if @tags.any? %>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tags.each do |tag| %>
        <%= link_to tag_path(tag), class: "block bg-white rounded-lg border border-gray-200 p-6 hover:border-indigo-300 hover:shadow-sm transition" do %>
          <h2 class="font-semibold text-gray-900"><%= tag.name %></h2>
          <p class="mt-3 text-sm text-gray-500"><%= tag.agenda_items_count %> agenda <%= "item".pluralize(tag.agenda_items_count) %></p>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg border border-gray-200 p-12 text-center">
      <p class="text-gray-500">No topics have been tagged yet.</p>
    </div>
  <% end %>
</section>

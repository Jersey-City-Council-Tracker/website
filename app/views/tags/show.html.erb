<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <nav class="mb-6 text-sm text-gray-500">
    <%= link_to "Topics", tags_path, class: "hover:text-blue-600" %> <span class="mx-1">/</span>
    <span class="text-gray-900"><%= @tag.name %></span>
  </nav>

  <h1 class="text-3xl font-bold text-gray-900 mb-8"><%= @tag.name %></h1>

  <% if @agenda_items.any? %>
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Item</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Result</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @agenda_items.each do |item| %>
            <tr>
              <td class="px-6 py-3 whitespace-nowrap text-sm text-gray-500">
                <% if item.meeting %>
                  <%= link_to item.meeting.date.strftime("%b %-d, %Y"), meeting_path(item.meeting), class: "text-blue-600 hover:text-blue-800" %>
                <% end %>
              </td>
              <td class="px-6 py-3 text-sm text-gray-900">
                <span class="text-gray-400"><%= item.item_number %></span>
                <%= item.title %>
                <% if item.tags.size > 1 %>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% item.tags.each do |tag| %>
                      <% next if tag.id == @tag.id %>
                      <%= link_to tag.name, tag_path(tag), class: "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 hover:bg-indigo-200" %>
                    <% end %>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-3 whitespace-nowrap text-sm">
                <% if item.result.present? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= result_badge_class(item.result) %>"><%= item.result.titleize %></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-lg border border-gray-200 p-12 text-center">
      <p class="text-gray-500">No agenda items have been tagged with this topic yet.</p>
    </div>
  <% end %>
</section>

<h1 class="text-2xl font-bold text-gray-900 mb-8">Users</h1>

<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Joined</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @users.each do |user| %>
        <tr>
          <td class="px-6 py-4 text-sm font-medium text-gray-900"><%= user.name %></td>
          <td class="px-6 py-4 text-sm text-gray-700"><%= user.email_address %></td>
          <td class="px-6 py-4">
            <% badge_class = case user.role
              when "site_admin" then "bg-red-100 text-red-700"
              when "content_admin" then "bg-purple-100 text-purple-700"
              else "bg-gray-100 text-gray-700"
            end %>
            <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium <%= badge_class %>"><%= user.role.humanize %></span>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500"><%= user.created_at.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1 class="text-2xl font-bold text-gray-900 mb-8">New Invitation</h1>

<div class="max-w-md">
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <%= form_with model: [:admin, @invitation], class: "space-y-5" do |form| %>
      <div>
        <%= form.label :role, "Role", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :role, Invitation.roles.keys.map { |r| [r.humanize, r] }, {}, class: "block w-full rounded-lg border border-gray-300 px-3 py-2 text-gray-900 shadow-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500" %>
        <p class="mt-1 text-xs text-gray-500">Content admins can manage meeting agendas. Site admins have full access.</p>
      </div>

      <div class="flex items-center gap-3">
        <%= form.submit "Create invitation", class: "rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 cursor-pointer" %>
        <%= link_to "Cancel", admin_invitations_path, class: "text-sm text-gray-600 hover:text-gray-800" %>
      </div>
    <% end %>
  </div>
</div>

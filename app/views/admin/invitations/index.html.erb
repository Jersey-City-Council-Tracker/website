<div class="flex items-center justify-between mb-8">
  <h1 class="text-2xl font-bold text-gray-900">Invitations</h1>
  <%= link_to "New invitation", new_admin_invitation_path, class: "rounded-lg bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
</div>

<% if @pending_invitations.any? %>
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Pending</h2>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-8">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Link</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created by</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Expires</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @pending_invitations.each do |invitation| %>
          <tr>
            <td class="px-6 py-4" data-controller="clipboard" data-clipboard-text-value="<%= new_registration_url(token: invitation.token) %>">
              <button data-action="clipboard#copy" data-clipboard-target="button" class="inline-flex items-center gap-1 rounded-md bg-gray-100 px-2.5 py-1.5 text-xs font-medium text-gray-700 hover:bg-gray-200 cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                Copy link
              </button>
            </td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium bg-purple-100 text-purple-700"><%= invitation.role.humanize %></span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= invitation.invited_by.name %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= time_ago_in_words(invitation.expires_at) %></td>
            <td class="px-6 py-4 text-right">
              <%= button_to "Revoke", admin_invitation_path(invitation), method: :delete, class: "text-sm text-red-600 hover:text-red-800 cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<% if @accepted_invitations.any? %>
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Accepted</h2>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Accepted by</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Invited by</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Accepted at</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @accepted_invitations.each do |invitation| %>
          <tr>
            <td class="px-6 py-4 text-sm text-gray-700"><%= invitation.accepted_by&.name %></td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center rounded-full px-2 py-1 text-xs font-medium bg-green-100 text-green-700"><%= invitation.role.humanize %></span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-700"><%= invitation.invited_by.name %></td>
            <td class="px-6 py-4 text-sm text-gray-500"><%= invitation.accepted_at.strftime("%b %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<% if @pending_invitations.empty? && @accepted_invitations.empty? %>
  <div class="text-center py-12 text-gray-500">
    <p class="text-lg">No invitations yet.</p>
    <p class="mt-1 text-sm">Create one to invite a content admin.</p>
  </div>
<% end %>
